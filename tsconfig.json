{
	"compilerOptions": {
		"target":                           "ES2020",
		"module":                           "CommonJS",
		"moduleResolution":                 "Node",
		"strict":                           false,
		"rootDir":                          "./",
		"baseUrl":                          "./",
		"esModuleInterop":                  true,
		"forceConsistentCasingInFileNames": false,

		"outDir":                           "./_build_",
		"declaration":                      true,
		"declarationDir":                   "./dist",

		"experimentalDecorators":           true,
		"emitDecoratorMetadata":            true,
		"paths":                            {
			"@classes/*": [
				"./src/classes/*"
			],
			"@helpers/*":  [
				"./src/helpers/*"
			],
			"@lib/*":     [
				"./src/lib/*"
			],
			"@shared/*":  [
				"./src/shared/*"
			],
			"@client/*":  [
				"./src/client/*"
			],
			"@middleware/*":  [
				"./src/middleware/*"
			],
			"@decorators/*":  [
				"./src/decorators/*"
			],
			"@types/*":    [
				"./src/types/*"
			],
			"@plugins/*":  [
				"./src/plugins/*"
			],
			"@server/*":  [
				"./src/server/*"
			],
			"@msg/*":     [
				"./src/messages/*"
			],
			"@root/*":  [
				"./src/*"
			]
		}
	},
	"cmbuild":        {
		"sourceRoot":  "./src",
		"buildTarget":  "./build"
	},
	"include":         [
		"src/**/*.ts"
	],
	"exclude":         [
		"**/_exclude/**",
		"./node_modules",
		"./src/samples",
		"./node_modules",
		"studio",
		"junk",
		".     #**/junk/**/*",
		"junk",
		"./gui-client",
		"./src/cm"
	]
}

