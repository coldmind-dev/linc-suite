{
	"compilerOptions": {
		"experimentalDecorators": true,
		"removeComments":         true,
		"composite":              true,
		"target":                 "ES2022",
		"module":                 "CommonJS",
		"moduleResolution":       "Node",
		"jsx":                    "react",
		"baseUrl":                "src",
		"esModuleInterop":        true,
		"outDir":                 "_build",
		"strict":                 false,
		"skipLibCheck":           false,
		"downlevelIteration":     true,
		"paths":                  {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include":         [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude":         [
		"node_modules",
		"_build",
		"_ignore"
	]
}
